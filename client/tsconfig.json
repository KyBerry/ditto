{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/components": ["src/components"],
      "@/contexts": ["src/contexts"],
      "@/hooks": ["src/hooks"],
      "@/gql/*": ["src/gql/*"],
      "@/assets/*": ["src/assets/*"],
      "@/styles/*": ["src/styles/*"]
    }
  },
  "include": ["src"]
}
